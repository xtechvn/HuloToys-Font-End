@{
    ViewData["Title"] = "Tin tức";
    int category_id = ViewBag.category_id;
}
<input type="hidden" class="category_id" data-categoryid="@category_id" />
<section class="section-news">
    <div class="container">
        <div class="wrap-news cat-menu">
            @await Component.InvokeAsync("MenuNews")
        </div>
        <div class="wrap-news">
            <div class="content">

                <div class="list-news-top list-news">@*3 tin nổi bật home*@</div>
                <div class="list-news list-news-top-left">@*các tin nổi bật còn lại home*@</div>

                <div class="wrap-paging">
