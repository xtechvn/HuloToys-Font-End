@{
    ViewData["Title"] = "Tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="section-news">
    <div class="container">
        <div class="wrap-news cat-menu">
            <div class="content" id="list-news-category">
                <ul class="list-cat" id="news-category">
                </ul>
            </div>
            <div class="top-siderbar-news">
                <div class="form-search">
                    <input type="search" placeholder="Tìm kiếm tin..." id="text_input">
                    <button type="button" class="btn-search" onclick="_new.GetFindArticleByTitle();"><i class="icon icon-search"></i></button>
                </div>
            </div>
        </div>

        <div class="wrap-news">
            <div class="content">
                <div class="list-news-top list-news" id="article">
                    <div class="top-news" style="width:65%;">
                        <div class="item-news">
                            <div class="box-news" id="article-1">
                                <div class="list-news placeholder box-placeholder" style="height:250px;">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="next-news" style="width:25%">
                        <div class="item-news">
                            <div class="box-news" id="article-2">
                                <div class="list-news placeholder box-placeholder" style="height:120px">

                                </div>
                            </div>
                        </div>
                        <div class="item-news">
                            <div class="box-news" id="article-3">
                                <div class="list-news placeholder box-placeholder" style="height:120px">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="section-article-paginate">
                    <div class="list-news" style="height:250px">
                        <div class="item-news">
                            <div class="box-news">
                                <div class="thumb-art">
                                    <div class="thumb thumb-news placeholder box-placeholder" style="height:250px">

                                    </div>
                                </div>
                                <div class="right-content placeholder box-placeholder" style="width: 100%; height: 250px; margin-left: 5px;">
                                    <div class="flex-cat  placeholder box-placeholder">
                                        <span class="time ">

                                        </span>

                                    </div>
                                    <h2 class="title-news  placeholder box-placeholder">
                                    </h2>
                                    <p class="description  placeholder box-placeholder">

                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="siderbar-news">
                <div class="box-side">
                    <img src="~/images/banner.jpg" alt="">
                </div>
                <div class="box-side">
                    <h3 class="title">
                        XEM NHIỀU NHẤT
                    </h3>
                    <div class="list-news" id="Most_Viewed_Article">
                        <div class="item-news">
                            <div class="box-news" style="height: 150px">
                                <div class="thumb-art">
                                    <div class="thumb thumb-news placeholder box-placeholder" style="height: 150px">

                                    </div>
                                </div>
                                <div class="right-content placeholder box-placeholder" style="width: 100%; height: 150px; margin-left: 5px;">
                                    <div class="flex-cat placeholder box-placeholder">

                                    </div>
                                    <h2 class="title-news placeholder box-placeholder">
                                    </h2>
                                    <p class="description placeholder box-placeholder">

                                    </p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-side">
                    <h3 class="title">
                        SẢN PHẨM KHUYẾN MÃI
                    </h3>
                    <div class="list-product" id="list_new_Sale">
                        <div class="list-product-sale">
                            <div class="swiper product-slide">
                                <div class="swiper_wrapper">
                                    <div class="swiper-slide">
                                        <div class="list-news">
                                            <div class="list-news placeholder box-placeholder" style="height: 150px">

                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script type="text/javascript" src="~/modules/new.js"></script>
}
