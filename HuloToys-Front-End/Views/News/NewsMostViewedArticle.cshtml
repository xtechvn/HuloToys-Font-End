@using HuloToys_Front_End.Models.News;
@using HuloToys_Front_End.Utilities.Lib;
@model List<ArticleResponse>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="item-news">
            <div class="box-news">
                <div class="thumb-art">
                    <div class="thumb thumb-news">
                        <a href="@("/tin-tuc"+CommonHelper.genLinkNewsV2(item.title,item.id.ToString()))"><img src="@(item.image_11 != "" ? item.image_11 : (item.image_169 != "" ? item.image_169 : item.image_43))" alt=""> </a>
                    </div>
                </div>
                <div class="right-content">
                    <div class="flex-cat">

                        <span class="time">
                            <i class="icon icon-time"></i>
                            @item.publish_date.ToString("dd/MM/yyyy")
                        </span>
                    </div>
                    <h2 class="title-news">
                        <a href="@("/tin-tuc"+CommonHelper.genLinkNewsV2(item.title,item.id.ToString()))">
                            @item.title
                        </a>
                    </h2>
                    <p class="description">
                        @item.lead
                    </p>
                    <a href="@("/tin-tuc"+CommonHelper.genLinkNewsV2(item.title,item.id.ToString()))" class="xemthem">Đọc tiếp</a>
                </div>
            </div>
        </div>
    }
}

