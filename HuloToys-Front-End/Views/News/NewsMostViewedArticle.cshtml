@using HuloToys_Front_End.Models.News;
@model List<ArticleResponse>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="item-news">
            <div class="box-news">
                <div class="thumb-art">
                    <div class="thumb thumb-news">
                        <a href="/News/NewsDetails/@item.id"><img src="@item.image_11" alt=""> </a>
                    </div>
                </div>
                <div class="right-content">
                    <div class="flex-cat">
                        <a href="/News/NewsDetails/@item.id" class="cat-tag cat-dochoi">Đồ chơi</a>
                        <a href="/News/NewsDetails/@item.id" class="cat-tag cat-goiy">Gợi ý </a>
                        <span class="time">
                            <i class="icon icon-time"></i>
                            @item.publish_date.ToString("dd/MM/yyyy")
                        </span>
                    </div>
                    <h2 class="title-news">
                        <a href="/News/NewsDetails/@item.id">
                            @item.title
                        </a>
                    </h2>
                    <p class="description">
                        @item.lead
                    </p>
                    <a href="/News/NewsDetails/@item.id" class="xemthem">Đọc tiếp</a>
                </div>
            </div>
        </div>
    }
}

