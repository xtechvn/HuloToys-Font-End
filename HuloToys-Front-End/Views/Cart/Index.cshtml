@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Giỏ hàng | Hulotoys";

}
<section class="section-cart placeholder" style="margin-bottom:100px;">
    <div class="container">
        <div class="breadcrumb">
            <ul>
                <li><a href="/">Trang chủ</a></li>
                <li class="active"><a href="javascript:;">Giỏ hàng / Thanh toán</a></li>
            </ul>
        </div>
        <div class="box-cart">
            <div class="list-addtocart">
                <div class="shopping-cart">
                    <div class="column-labels">
                        <div class="product-checkall">
                            <div class="box-checkbox">
                                <input type="checkbox" id="checkbox11" class="checkbox" />
                                <label class="box-checkbox-all" for="checkbox11"></label>
                            </div>
                        </div>
                        <label class="product-image">Tên sản phẩm <span class="total-sp">(2 sản phẩm)</span></label>
                        <label class="product-price">Đơn giá</label>
                        <label class="product-quantity">Số lượng</label>
                        <label class="product-line-price">Thành tiền</label>
                        <label class="product-removal"></label>
                    </div>
                    <div class="table-addtocart">
                        <div class="product">
                            <div class="product-checkall">
                                <div class="box-checkbox">
                                    <input type="checkbox" id="checkbox12" class="checkbox" />
                                    <label for="checkbox12"></label>
                                </div>
                            </div>
                            <div class="product-image">
                                <img class="thumb-product" src="/assets/images/product.jpg" alt="" />
                                <div class="product-title">
                                    <h3 class="name-product">
                                        Gấu Bông Mèo Hoàng Thượng Cosplay, Thú Nhồi Bông An Toàn
                                        Cho Bé
                                    </h3>
                                    <p class="product-description">Phân loại: Gấu trúc, Kích thước: 60cm</p>
                                </div>

                            </div>
                            <div class="product-price">
                                <span class="price-one">832.00đ</span>
                                <span class="price-old">
                                    932.00đ <span class="percent">6%</span>
                                    <div class="discount">
                                        <span class="bg-sale">Giảm 30K</span>
                                    </div>
                            </div>
                            <div class="product-quantity">
                                <div class="number-input">
                                    <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()"></button>
                                    <input class="quantity" min="0" name="quantity" value="1" type="number">
                                    <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
                                            class="plus"></button>
                                </div>
                            </div>

                            <div class="product-line-price">25.000đ</div>
                            <div class="product-removal">
                                <button class="remove-product">
                                    Xóa
                                </button>
                            </div>
                        </div>
                        <div class="product">
                            <div class="product-checkall">
                                <div class="box-checkbox">
                                    <input type="checkbox" id="checkbox12" class="checkbox" />
                                    <label for="checkbox12"></label>
                                </div>
                            </div>
                            <div class="product-image">
                                <img class="thumb-product" src="/assets/images/product.jpg" alt="" />
                                <div class="product-title">
                                    <h3 class="name-product">
                                        Gấu Bông Mèo Hoàng Thượng Cosplay, Thú Nhồi Bông An Toàn
                                        Cho Bé
                                    </h3>
                                    <p class="product-description">Phân loại: Gấu trúc, Kích thước: 60cm</p>
                                </div>

                            </div>
                            <div class="product-price">
                                <span class="price-one">832.00đ</span>
                                <span class="price-old">
                                    932.00đ <span class="percent">6%</span>
                                    <div class="discount">
                                        <span class="bg-sale">Giảm 30K</span>
                                    </div>
                            </div>
                            <div class="product-quantity">
                                <div class="number-input">
                                    <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()"></button>
                                    <input class="quantity" min="0" name="quantity" value="1" type="number">
                                    <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
                                            class="plus"></button>
                                </div>
                            </div>

                            <div class="product-line-price">25.000đ</div>
                            <div class="product-removal">
                                <button class="remove-product">
                                    Xóa
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="right-cart">
                <div class="address">
                    <h4 class="name">
                        <nw id="address-receivername">Phạm ái phương</nw> <span></span> <nw id="address-phone">098878779</nw>
                    </h4>
                    <p class="add"><nw id="address">Tầng 5, tòa nhà Diamond Flower, số 1 Hoàng Đạo Thúy, Hà Nội</nw></p>
                    <div class="delivery">
                        <span class="tt">Hình thức giao hàng:</span>
                        <div class="select-delivery select-option active">
                            <span class="tt">Giao hàng nhanh</span>
                            <ul class="list-option">
                                <li class="item">
                                    <div class="choose">
                                        <div class="box-checkbox">
                                            <input class="checkbox select-delivery-checkbox" name="select-delivery" type="radio" value="3" checked>
                                            <label class="option-name">Giao nhanh</label>
                                        </div>
                                    </div>
                                    <div class="price-ship" style="display:none;">0đ</div>
                                </li>
                                <li class="item">
                                    <div class="choose">
                                        <div class="box-checkbox">
                                            <input class="checkbox select-delivery-checkbox" name="select-delivery" type="radio" value="1">
                                            <label class="option-name">Lấy tại cửa hàng</label>
                                        </div>
                                    </div>
                                    <div class="price-ship" style="display:none;">0đ</div>
                                </li>
                                <li class="item">
                                    <div class="choose">
                                        <div class="box-checkbox">
                                            <input class="checkbox select-delivery-checkbox" name="select-delivery" type="radio" value="2" >
                                            <label class="option-name">Hỏa tốc</label>
                                        </div>
                                    </div>
                                    <div class="price-ship" style="display:none;">0đ</div>
                                </li>
                              
                                <li class="item">
                                    <div class="choose">
                                        <div class="box-checkbox">
                                            <input class="checkbox select-delivery-checkbox" name="select-delivery" type="radio" value="4">
                                            <label class="option-name">Giao tiết kiệm</label>
                                        </div>
                                    </div>
                                    <div class="price-ship" style="display:none;">0đ</div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <a href="javascript:;" class="edit update-address-order">Thay đổi</a>

                </div>
                <div class="voucher">
                    <div class="box-tt">
                        <h4 class="tt"><img src="/assets/images/icon-vc.png" alt="" />Mã voucher:</h4>
                        <a href="" class="choose-voucher">Chọn hoặc nhập mã Khuyễn mãi khác</a>
                    </div>
                    <div class="voucher-add">
                        <div class="img"><img src="/assets/images/voucher.png" alt="" /></div>
                        <div class="info">
                            <h4 class="name">Giảm đậm gơn 20%<i class="icon icon-info"> </i></h4>

                        </div>
                        <a href="" class="remove-voucher">Bỏ chọn</a>
                    </div>
                </div>
                <div class="pay">
                    <span class="tt">Phương thức thanh toán:</span>
                    <div class="select-option select-bank active">
                        <span class="tt">Chuyển khoản qua ngân hàng </span>
                        <ul class="list-option">
                            <li class="item">
                                <div class="choose">
                                    <div class="box-checkbox">
                                        <input class="checkbox select-delivery-checkbox" name="select-bank" type="radio" value="2" checked>
                                        <label for="checkbox2">
                                            <img src="/assets/images/icon/Bank_Dou.svg" alt="" />
                                            <nw class="option-name">Chuyển khoản qua ngân hàng</nw>


                                        </label>
                                    </div>
                                </div>
                            </li>
                            <li class="item">
                                <div class="choose">
                                    <div class="box-checkbox">
                                        <input class="checkbox select-delivery-checkbox" name="select-bank" type="radio" value="1" >
                                        <label for="checkbox1">
                                            <img src="/assets/images/icon/COD_Dou.svg" alt="" />
                                            <nw class="option-name">Thanh toán khi nhận hàng(COD)</nw>
                                        </label>
                                    </div>
                                </div>
                            </li>
                          
                            <li class="item">
                                <div class="choose">
                                    <div class="box-checkbox">
                                        <input class="checkbox select-delivery-checkbox" name="select-bank" type="radio" value="3">
                                        <label for="checkbox3">
                                            <img src="/assets/images/icon/QR_Dou.svg" alt="" />

                                            <nw class="option-name">Thanh toán QR-PAY</nw>

                                        </label>
                                    </div>
                                </div>
                            </li>
                            <li class="item">
                                <div class="choose">
                                    <div class="box-checkbox">
                                        <input class="checkbox select-delivery-checkbox" name="select-bank" type="radio" value="4">
                                        <label for="checkbox4">
                                            <img src="/assets/images/icon/MasterCard_Dou.svg"
                                                 alt="" />
                                            <nw class="option-name">Thẻ Visa - Master Card</nw>

                                        </label>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="total-cart">
                    <div class="flex-total total-amount">
                        <div class="tt">Tiền hàng</div>
                        <div class="pr">3.000.000đ</div>
                    </div>
                    <div class="flex-total total-shipping-fee">
                        <div class="tt">Phí vận chuyển</div>
                        <div class="pr">30.000đ</div>
                    </div>
                    <div class="flex-total total-discount" style="display:none;">
                        <div class="tt">Giảm giá</div>
                        <div class="pr">-3.000đ</div>
                    </div>
                    <div class="bt-total total-final-amount">
                        <div class="flex-total">
                            <div class="tt">Tổng tiền</div>
                            <div class="pr">3.000.000đ</div>
                        </div>
                    </div>
                </div>
                <a href="javascript:;" class="btn btn-base btn-confirm btn-confirm-cart">XÁC NHẬN THANH TOÁN</a>
            </div>
        </div>
    </div>
</section>

<!--Box xác nhận xóa-->
<div id="lightbox-delete-cart" class="overlay form-noti" style="margin-top:50px;">
    <div class="popup">
        <a class="close" href="javascript:;">
            <i class="icon icon-close"></i>
        </a>
        <div class="content">
            <h4 class="title-popup">Cập nhật thông tin giao hàng</h4>
            <p style="font-size:14px;color:red;">Sản phẩm này sẽ bị xóa khỏi giỏ hàng, bạn có chắc chắn không?</p>
            <form>
                <div class="action">
                    <a href="javascript:;" class="btn btn-back">Hủy</a>
                    <a href="javascript:;" class="btn btn-base btn-save">Xác nhận</a>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Box không thành công-->

<div id="lightbox-cannot-add-cart" class="overlay form-noti" style="margin-top:50px;">
    <div class="popup">
        <a class="close" href="javascript:;">
            <i class="icon icon-close"></i>
        </a>
        <div class="content">
            <div class="box-payment box-pending">
                <a class="close" href="javascript:;">
                    <i class="icon icon-close"></i>
                </a>
                <img class="img-check" src="/assets/images/icon-err.png" alt="" />
                <h2 class="title-box">Xác nhận thanh toán không thành công </h2>
                <div class="info-order">
                    <p class="notification-content">
                       Có lỗi xảy ra trong quá trình xác nhận thông tin
                    </p>
                    <br />
                    <p>
                        Hãy gọi :<sapn class="tel"> 1900.633.376</sapn> để được hỗ trợ
                    </p>

                </div>
               
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="/modules/cart.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/modules/order_address.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/modules/address_client.js" asp-append-version="true"></script>

}
