@using HuloToys_Front_End.Models.Raiting
@{
    Layout = null;
    string StaticDomain = "https://static-image.adavigo.com";
}
@model List<RatingESResponseModel>
@if (Model!=null  && Model.Count > 0)
{
    foreach(var comment in Model)
    {
        <div class="item-commnet">
            <div class="flex-comment">
                <div class="avatar">
                    <img src="@(comment.client_avatar==null ||comment.client_avatar.Trim()==""?"/images/logo.png":comment.client_avatar)" alt="" />
                </div>
                <div class="comment-user">
                    <h4 class="name">@comment.client_name</h4>
                    <div class="review">
                        @for (int i = 0; i < (int)Math.Round((decimal)comment.star); i++)
                        {
                            <i class="icon icon-star"></i>

                        }
                    </div>
                    <div class="meta">
                        @{
                            TimeZoneInfo timeZoneInfo = TimeZoneInfo.FindSystemTimeZoneById("SE Asia Standard Time");
                            DateTime newDateTime = TimeZoneInfo.ConvertTime((DateTime)comment.createddate, timeZoneInfo);
                        }
                        <span class="time">@(newDateTime.ToString("dd/MM/yyyy HH:mm"))</span>
                        <span class="cat">@comment.variation_detail</span>
                    </div>

                </div>
            </div>
            <div class="cmt-review">
               @comment.comment
            </div>
            <div class="img-product">
                @if (comment.videolink != null && comment.videolink.Trim() != "")
                {
                    @foreach (var vid in comment.videolink.Split(","))
                    {
                        if (vid != null && vid.Trim() != "")
                        {
                            var vid_src = vid;
                            if (!vid_src.Contains(StaticDomain) && !vid_src.Contains("data:video") && !vid_src.Contains("http") && !vid_src.Contains("base64,"))
                                vid_src = StaticDomain + vid;
                            
                           @*  <a data-lg-size="1280-720" 
                            data-pinterest-text="Pin it3" 
                            data-tweet-text="lightGallery slide  4"
                               data-src="@vid_src"
                               data-video='{" source": [{"src":"@vid_src", "type" :"video /mp4"}], "kind" :"captions", "srclang" : "en" , "label" : "English" , "default" : "true" }], "attributes" : {"preload": false, "controls" : true}}'
                               data-poster="@vid_src"
                               data-sub-html="Video đánh giá">
                                <img class="img-responsive" src="/images/video-icon.png" width="120" height="120" />
                            </a> *@

                            <a data-lg-size="1280-720" data-pinterest-text="Pin it3" data-tweet-text="lightGallery slide  4"
                               data-video='{"source": [{"src":"@vid_src", "type":"video/mp4"}],  "attributes": {"preload": false, "controls": true}}' data-poster="/images/video-icon.png" data-sub-html="<h4>Video đánh giá sản phẩm</h4>">
                                <img class="img-responsive" src="/images/video-icon.png" width="300" />
                            </a>
                        }
                    }
                }
                @if (comment.imglink != null && comment.imglink.Trim() != "")
                {
                    @foreach (var img in comment.imglink.Split(","))
                    {
                        if (img != null && img.Trim() != "")
                        {
                            var img_src = img;
                            if (!img_src.Contains(StaticDomain) && !img_src.Contains("data:image") && !img_src.Contains("http") && !img_src.Contains("base64,"))
                                img_src = StaticDomain + img;
                          @*   <a target="_blank" rel="noopener noreferrer" href="@img_src" data-lg-size="1920-1080">
                                <img src="@img_src" alt="" style=" object-fit: cover; " />
                            </a> *@
                            <a href="@img_src" data-lg-size="1920-1080">
                                <img src="@img_src" alt="" style=" object-fit: cover; " />

                            </a>

                        }
                    }
                }

            </div>
            @if (comment.replies != null && comment.replies.Count>0)
            {
                @foreach (var reply in comment.replies)
                {
                    <div class="reply-comment">
                        <span class="time">@(((DateTime)reply.CreatedDate).ToString("dd/MM/yyyy HH:mm"))</span>
                        <h4 class="name">@reply.UserName</h4>
                        <div class="cmt">
                           @reply.Comment
                        </div>
                    </div>
                }
            }
            
        </div>
    }
}

